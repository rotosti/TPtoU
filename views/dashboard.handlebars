<h1 class="uk-heading-xlarge uk-text-center" id="landinghead">Your Account</h1>

<div class="uk-container">
    <h2 class="uk-heading-medium uk-text-center">Account Details</h2>
    <table class="uk-table uk-table-striped">
    <thead>
        <tr>
            <th>USER DETAILS </th>
          
     
        </tr>
    </thead>
    <tbody>
        <tr class="uk-flex-center">
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zipcode</td>
        </tr>
        <tr class="uk-flex-center">
            <td>{{userData.firstname}}</td>
            <td>{{userData.lastname}}</td>
            <td>{{userData.email}}</td>
            <td>{{userData.streetaddress}}</td>
            <td>{{userData.city}}</td>
            <td>{{userData.state}}</td>
            <td>{{userData.zipcode}}</td>
        </tr>
        
    </tbody>
</table>
    <button class="uk-button uk-button-default uk-margin-medium-bottom" id="account-update">Save Account Updates</button>
</div>

<div>
        <div class="uk-card uk-card-primary uk-flex-center uk-card-body">
            <h3 id="curtier" class="uk-card-title uk-text-center uk-text-bolder uk-text-large">CURRENT TIER</h3>
            <p class="uk-text-center uk-text-lead">{{currentSub.tier_name}}</p>
        </div> 

<div class="uk-margin-medium-top">
    <h2 class="uk-text-center">Change Current Tier</h2>
    <button class="uk-button uk-button-default uk-margin-medium-bottom" id="account-update">Confirm Changes</button>
</div>

<button class="uk-button uk-button-default" id="logout">Log Out</button>

<script src="/js/logout.js"></script>

